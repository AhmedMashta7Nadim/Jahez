@model IEnumerable<Models.Model.Departmint>

@{
    ViewData["Title"] = "GetDepartmintWithCatigory";
    Layout = "_Layout";
}

<div class="container py-5">
    @foreach (var department in Model)
    {
        <div class="mb-5">
            <!-- قسم لكل Department -->
            <div class="d-flex justify-content-between align-items-center mb-4 bg-primary p-3 rounded-3" style="background-color: #514386!important;">
                <h2 class="text-white mb-0">
                    <i class="bi bi-building"></i> @department.NameDepartmint
                </h2>
            </div>

            <!-- بطاقات ال Categories -->
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                @foreach (var category in department.categories)
                {
                    <div class="col">
                        <div class="card h-100 border-0 shadow-lg" style="background-color: #6253A1;">
                            <div class="card-header text-white border-0" style="background-color: #403694;">
                                <h4 class="card-title mb-0">
                                    <i class="bi bi-tag"></i> @category.NameCategorie
                                </h4>
                            </div>

                            <div class="card-body text-white">
                                <div class="d-flex flex-column gap-3">
                                    <div>
                                        <span class="fw-bold">الوصف:</span>
                                        <p class="mb-0 text-light opacity-75">@category.Description</p>
                                    </div>

                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="fw-bold">السعر:</span>
                                        <span class="badge bg-warning text-dark">@category.Price ريال</span>
                                    </div>

                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="fw-bold">الكمية:</span>
                                        <span class="badge bg-info">@category.Quantity وحدة</span>
                                    </div>

                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="fw-bold">التاريخ:</span>
                                        <span class="text-light opacity-75">@category.dateTime.ToString("yyyy/MM/dd")</span>
                                    </div>
                                </div>
                            </div>

                            <div class="card-footer bg-transparent border-0 d-flex justify-content-end gap-2">
                                <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm text-white" style="background-color: #403694;">
                                    <i class="bi bi-pencil-square"></i> تعديل
                                </a>
                                <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-danger text-white">
                                    <i class="bi bi-trash3"></i> حذف
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">